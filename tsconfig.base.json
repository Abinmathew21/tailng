{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@tailng-ui/tailng-ui": ["libs/ui/src/public-api.ts"],
      "@tailng-ui/tailng-ui/*": ["libs/ui/*/src/public-api.ts"],
      "@tailng-ui/tailng-icons": ["libs/icons/src/public-api.ts"],
      "@tailng-ui/tailng-icons/*": ["libs/icons/*/src/public-api.ts"],
